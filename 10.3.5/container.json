{
	"project": "wplib",
	"name": "mariadb",
	"version": "10.3.4",
	"majorversion": "10.3",
	"latest": "",
	"class": "database",
	"network": "--network wplibbox",
	"ports": "-p 3306:3306",
	"volumes": "-v /vagrant/sql:/tmp/sql -v /vagrant/provision:/docker-entrypoint-initdb.d -v mariadb_data:/var/lib/mariadb",
	"restart": "--restart no",
	"args": "-e MYSQL_ALLOW_EMPTY_PASSWORD=yes -e MYSQL_DATABASE=wordpress -e MYSQL_USER=wordpress -e MYSQL_PASSWORD=wordpress",
	"env": "MARIADB_VERSION"
}

